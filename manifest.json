{
	"manifest_version": 2,
	"name": "iOS IMAP Notes",
	"description": "Edit IMAP Notes created by iOS devices within Thunderbird",
	"version": "1.0.3",
	"author": "Christian Eichert",
	"developer": {
		"name": "Christian Eichert, Jesse Lujack, John Bieling"
	},
	"default_locale": "en-US",
	"applications": {
		"gecko": {
			"id": "iOSNotes@zp1.net",
			"strict_min_version": "121"
		}
	},
	"options_ui": {
		"page": "options/options.html"
	},
    "commands": {
        "open-ios-editor": {
            "suggested_key": {
                "default": "Ctrl+Q"
            },
        "description": "Open the iOS notes editor"
        },
        "saveclose-ios-editor": {
            "suggested_key": {
                "default": "Alt+Q"
            },
        "description": "Save and close the note"
        }
    },
	"background": {
		"page": "background.html",
		"scripts": ["background.js"]
	},
	"icons": {
		"32": "images/iOSNotes.png"
	},
	"host_permissions":["<all_urls>","*://*/*"],
	"permissions": [
		"<all_urls>",
		"accountsFolders",
		"accountsRead",
		"activeTab",
		"activeTabWhenInvoked",
		"chrome://*/*",
		"downloads",
		"management",
		"menus",
		"messagesDelete",
		"messagesImport",
		"messagesMove",
		"messagesRead",
		"moz-extension://*/*",
		"notifications",
		"scripting",
		"storage",
		"tabs"
	  ]
}
